    "@types/jsonwebtoken": "^9.0.2",
    "@types/lodash": "^4.14.195",
    "@types/lru-cache": "^7.10.10",
    "@types/mocha": "^10.0.1",
    "@types/ms": "^0.7.31",
    "@types/node": "^18.8.3",
    "@types/node-schedule": "^2.1.0",
    "@types/passport": "^1.0.12",
    "@types/passport-jwt": "^3.0.8",
    "@types/passport-local": "^1.0.35",
    "@types/uuid": "^9.0.1",
    "chai": "^4.3.7",
    "eslint": "^8.44.0",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.20",
