{
  "name": "backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "build-watch": "tsc -w",
    "clean": "rm -rf ./build",
    "start": "NODE_ENV=production node ./build/main.js",
    "dev": "NODE_ENV=development nodemon ./src/main.ts",
    "lint": "eslint . --ignore-path ../.gitignore --ext .ts,.tsx,.js",
    "lint:fix": "yarn lint --fix",
