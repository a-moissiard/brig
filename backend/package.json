{
  "name": "backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf ./build",
    "start": "node ./build/main.js",
    "dev": "nodemon ./src/main.ts",
    "lint": "eslint . --ignore-path ../.gitignore --ext .ts,.tsx,.js",
    "lint:fix": "yarn lint --fix",
    "test": "mocha --full-trace --recursive 'src/test/**/*.spec.ts'",
    "test-watch": "yarn test -- -w --watch-files '**/*.ts'"
  },
  "dependencies": {
    "basic-ftp": "^5.0.2",
    "dotenv": "^16.1.3",
    "express": "^4.18.1",
    "express-async-handler": "^1.2.0",
    "mongodb": "^5.6.0",
    "uuid": "^9.0.0",
    "winston": "^3.9.0"
  },
  "devDependencies": {
    "@tsconfig/node18": "^1.0.1",
    "@types/chai": "^4.3.5",
    "@types/express": "^4.17.14",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.8.3",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "chai": "^4.3.7",
    "eslint": "^8.24.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-import-newlines": "^1.2.3",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
