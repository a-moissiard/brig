    "express-async-handler": "^1.2.0",
    "express-validator": "^7.0.1",
    "f-promise-async": "^3.2.3",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "lru-cache": "^10.0.0",
    "mongodb": "^5.6.0",
    "ms": "^2.1.3",
    "node-schedule": "^2.1.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "uuid": "^9.0.0",
    "winston": "^3.9.0"
